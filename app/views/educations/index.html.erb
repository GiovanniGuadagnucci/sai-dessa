<div class="videos-banner"></div>
<div class="container-app">
  <div class="title-wrapper">
    <h1>Videos Educativos</h1>
  <% @categories.each do |category| %>
    <h2>Esse vídeo é sobre <%= translate(category) %></h2>
  </div>
  <div class="videos-wrapper">
    <% @educations.where(category: category).each do |education| %>
      <%= cl_video_tag(education.content_url, class: "mb-4", controls: true) %>
    <% end %>
  <% end %>
  </div>
  <div class="button-wrapper">
    <%= link_to @btn_text, questoes_path, class: "btn-app next-step" %>
    <% unless current_user.phase_not_started? %>
      <%= link_to "Não assisti os conteudos", fim_path({ watch: "Voltar pro conteudo" }), class: "btn-app feedback"  %>
    <% end %>
  </div>
</div>
